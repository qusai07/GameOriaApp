@model GameOria.Shared.ViewModels.SignupViewModel

<div class="container my-5">
    <section class="welcome-hero" style="background: url('../assets/images/welcome-hero/banner.jpg') no-repeat; min-height: 100vh; display: flex; align-items: center; justify-content: center; background-size: cover; padding: 0;">
        <div class="login-container" style="background: rgba(22, 28, 36, 0.8); backdrop-filter: blur(10px); padding: 50px; border-radius: 15px; box-shadow: 0 0 40px rgba(0,0,0,0.5); width: 800px;">
            <div class="text-center mb-5">
                <h2 class="text-white" style="font-size: 42px; font-weight: 600;">Create Your Account</h2>
                <p style="color: #87CEEB; font-size: 18px;">Sign up for your GameOria account</p>
            </div>

            <form asp-action="SignUp" asp-controller="Authentication" method="post" style="max-width: 600px; margin: 0 auto;">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group position-relative mb-4">
                    <input asp-for="UserName" class="form-control custom-input" placeholder="Enter User Name" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group position-relative mb-4">
                    <input asp-for="FullName" class="form-control custom-input" placeholder="Enter Full Name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group position-relative mb-4">
                    <input asp-for="EmailAddress" type="email" class="form-control custom-input" placeholder="Enter Email Address" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>

                <div class="form-group position-relative mb-4">
                    <input asp-for="MobileNumber" class="form-control custom-input" placeholder="Enter Mobile Number" />
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                </div>

                <div class="form-group position-relative mb-4">
                    <input asp-for="Password" type="password" class="form-control custom-input" placeholder="Enter Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group position-relative mb-4">
                    <input asp-for="ConfirmPassword" type="password" class="form-control custom-input" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-block login-btn">SIGN UP</button>

                <div class="text-center mt-4">
                    <p class="text-white" style="font-size: 16px;">
                        Already have an account?
                        <a asp-action="Login" asp-controller="Home" style="color: #87CEEB; font-weight: 600;">Login</a>
                    </p>
                </div>
            </form>
        </div>
    </section>



</div>

<style>
    .custom-input {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
        padding: 15px;
        border-radius: 8px;
        font-size: 16px;
    }

        .custom-input:focus {
            background: rgba(255, 255, 255, 0.1);
            border-color: #87CEEB;
            box-shadow: 0 0 20px rgba(135, 206, 235, 0.3);
            outline: none;
        }

        .custom-input::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

    .login-btn {
        background: #8B0000;
        color: white;
        padding: 18px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-size: 18px;
        transition: all 0.3s ease;
    }

        .login-btn:hover {
            background: #A52A2A;
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(139, 0, 0, 0.4);
        }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
