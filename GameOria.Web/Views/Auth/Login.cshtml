@model GameOria.Shared.DTOs.Login.LoginParameters
    <div>
        <section class="welcome-hero" style="background: url('../assets/images/welcome-hero/banner.jpg') no-repeat; min-height: 100vh; display: flex; align-items: center; justify-content: center; background-size: cover; padding: 0;">
            <div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: 100vh;">
                <div class="login-container" style="background: rgba(22, 28, 36, 0.8); backdrop-filter: blur(10px); padding: 50px; border-radius: 15px; box-shadow: 0 0 40px rgba(0,0,0,0.5); width: 800px; margin: 140px;">
                    <div class="text-center mb-5">
                        <h2 class="text-white" style="font-size: 42px; font-weight: 600;">Welcome Back</h2>
                        <p style="color: #87CEEB; font-size: 18px;">Login to your GameOria account</p>
                    </div>

                    <form asp-action="Login" asp-controller="Authentication" method="post" style="max-width: 600px; margin: 0 auto;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group position-relative mb-4">
                            <input asp-for="UserNameOrEmail" class="form-control custom-input" placeholder="User Name"
                                   style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); color: white; padding: 20px; border-radius: 8px; font-size: 18px;" />
                            <i class="fa fa-user input-icon" style="position: absolute; right: 20px; top: 50%; transform: translateY(-50%); color: #87CEEB; font-size: 20px;"></i>
                            <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                        </div>

                        <div class="form-group position-relative mb-4">
                            <input asp-for="Password" type="password" class="form-control custom-input" placeholder="Password"
                                   style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); color: white; padding: 20px; border-radius: 8px; font-size: 18px;" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        @*<div class="d-flex justify-content-between align-items-center mb-5" style="font-size: 16px;">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="rememberMe">
                                <label class="custom-control-label text-white" for="rememberMe">Remember me</label>
                            </div>
                            <a href="#" style="color: #87CEEB; text-decoration: none;">Forgot Password?</a>
                        </div>*@

                        <button type="submit" class="btn btn-block login-btn"
                                style="background: #8B0000; color: white; padding: 18px; border: none; border-radius: 8px; font-weight: 600; text-transform: uppercase; letter-spacing: 2px; transition: all 0.3s ease; font-size: 18px; margin-bottom: auto;">
                            LOGIN NOW
                        </button>

                        <div class="text-center mt-4">
                            <p class="text-white" style="font-size: 16px;">
                                Don't have an account?
                                <a asp-action="SignUp" asp-controller="Authentication" style="color: #87CEEB; text-decoration: none; font-weight: 600; margin-left: 10px;">Register</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </section>

    </div>
    <style>
        .welcome-hero {
            position: relative;
            overflow: hidden;
        }

        .login-container {
            animation: fadeIn 0.5s ease-out;
            position: relative;
            z-index: 1;
        }

        .custom-input:focus {
            background: rgba(255, 255, 255, 0.1) !important;
            border-color: #87CEEB !important;
            box-shadow: 0 0 20px rgba(135, 206, 235, 0.3) !important;
            outline: none;
        }

        .custom-input::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

        .login-btn:hover {
            background: #A52A2A !important;
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(139, 0, 0, 0.4);
        }

        .custom-control-input:checked ~ .custom-control-label::before {
            background-color: #8B0000;
            border-color: #8B0000;
        }

        keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .custom-control-label::before {
            background-color: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.2);
        }

        .custom-checkbox .custom-control-input:checked ~ .custom-control-label::before {
            background-color: #8B0000;
        }

        /* Responsive adjustments */
        media (max-width: 992px) {
            .login-container

        {
            width: 90%;
            padding: 30px;
        }
        }
    </style>