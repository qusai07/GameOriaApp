@model GameOria.Shared.ViewModels.VerifyOtpViewModel

<style>
    body {
        background: linear-gradient(135deg, #1c1c1c 0%, #2a2a2a 100%);
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
    }

    .verify-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .verify-card {
        background-color: #181818;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
        padding: 3rem 2rem;
        max-width: 420px;
        width: 100%;
        text-align: center;
        animation: fadeIn 0.6s ease-in-out;
    }

    .verify-card h3 {
        color: #ff3b3b;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .verify-card p {
        color: #bbb;
        margin-bottom: 2rem;
    }

    .otp-input {
        letter-spacing: 10px;
        font-size: 1.5rem;
        text-align: center;
        font-weight: bold;
        border-radius: 10px;
        padding: 0.8rem;
        background: #222;
        color: #fff;
        border: 2px solid #333;
        transition: 0.3s;
    }

    .otp-input:focus {
        border-color: #ff3b3b;
        outline: none;
        background: #2b2b2b;
    }

    .verify-btn {
        background-color: #ff3b3b;
        color: white;
        font-weight: 600;
        border: none;
        padding: 0.9rem;
        width: 100%;
        border-radius: 50px;
        margin-top: 1rem;
        transition: background 0.3s;
    }

    .verify-btn:hover {
        background-color: #ff5555;
    }

    .resend {
        margin-top: 1.5rem;
        color: #ccc;
        font-size: 0.9rem;
    }

    .resend a {
        color: #ff3b3b;
        text-decoration: none;
        font-weight: 600;
    }

    .resend a:hover {
        text-decoration: underline;
    }

    keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>


<div class="verify-container">
    <div class="verify-card">
        <h3>🔐 Verify Your Account</h3>
        <p>Enter the 6-digit code we sent to your email or phone</p>

        <form asp-action="VerifyOtp" asp-controller="Authentication" method="post">
            <div class="mb-4">
                <input asp-for="Otp" id="otpInput"
                       class="otp-input form-control"
                       placeholder="••••••"
                       maxlength="6"
                       autocomplete="off" />
                <span asp-validation-for="Otp" class="text-danger small d-block mt-1"></span>
            </div>

            <button type="submit" class="verify-btn">✅ Verify</button>
        </form>

        <div class="resend">
            <span>Didn’t receive the code?</span>
            <form asp-action="ResendOtp" method="post" class="d-inline">
                <input type="hidden" name="Id" value="@Model.Id" />
                <button type="submit" class="btn btn-link text-danger p-0 m-0" style="text-decoration:none;">Resend OTP</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
