@model GameOria.Shared.ViewModels.Organizer.CreateStoreVM

@{
    ViewData["Title"] = "Create My Store";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    .cards-page {
        min-height: 100vh;
        padding: 3rem 2rem;
        font-family: 'Segoe UI', sans-serif;
        color: #fff;
    }

    .notes-box {
        background-color: rgba(24, 24, 24, 0.9);
        border-radius: 20px;
        padding: 1.5rem 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.4);
        font-size: 1.1rem;
        line-height: 1.5;
    }

    .cards-container {
        display: flex;
        gap: 2rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .card {
        background-color: #181818;
        border-radius: 25px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
        padding: 2.5rem;
        flex: 1 1 32%;
        min-width: 300px;
        text-align: start;
        animation: fadeIn 0.6s ease-in-out;
    }

    .card h3 {
        color: #ff3b3b;
        font-weight: 700;
        font-size: 1.6rem;
        margin-bottom: 1.2rem;
    }

    .form-control {
        background: #222;
        color: #fff;
        border: 2px solid #333;
        border-radius: 12px;
        padding: 0.75rem;
        font-size: 1rem;
        margin-bottom: 1rem;
        transition: 0.3s;
    }

    .form-control:focus {
        border-color: #ff3b3b;
        background: #2b2b2b;
        outline: none;
    }

    .btn-submit {
        background-color: #ff3b3b;
        color: white;
        font-weight: 700;
        border: none;
        padding: 1rem 2rem;
        border-radius: 50px;
        font-size: 1.2rem;
        margin-top: 2rem;
        display: block;
        width: 220px;
        margin-left: auto;
        margin-right: auto;
        transition: background 0.3s, transform 0.2s;
    }

    .btn-submit:hover {
        background-color: #ff5555;
        transform: scale(1.05);
    }

    keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    media (max-width: 1200px) {
        .card {
            flex: 1 1 45%;
        }
    }

    media (max-width: 768px) {
        .card {
            flex: 1 1 100%;
        }
    }
</style>

<div class="cards-page">

    <div class="notes-box">
        <strong>Note:</strong> Please make sure to provide accurate information for your store, owner details, and banking information. All fields are required to successfully create your store.
    </div>

    <form asp-action="CreateMyStore" method="post">
        <div class="cards-container">
            <!-- Card 1: Store Info -->
            <div class="card">
                <h3>Store Info</h3>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="LogoUrl"></label>
                    <input asp-for="LogoUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CoverImageUrl"></label>
                    <input asp-for="CoverImageUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ShortcutWebsite"></label>
                    <input asp-for="ShortcutWebsite" class="form-control" />
                </div>
            </div>

            <!-- Card 2: Owner Info -->
            <div class="card">
                <h3>Owner Info</h3>
                <div class="form-group">
                    <label asp-for="OwnerFirstName"></label>
                    <input asp-for="OwnerFirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="OwnerLastName"></label>
                    <input asp-for="OwnerLastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="OwnerEmail"></label>
                    <input asp-for="OwnerEmail" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="OwnerPhone"></label>
                    <input asp-for="OwnerPhone" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="OwnerDateOfBirth"></label>
                    <input asp-for="OwnerDateOfBirth" class="form-control" type="date" />
                </div>
            </div>

            <!-- Card 3: Banking & Agreement -->
            <div class="card">
                <h3>Banking & Agreement</h3>
                <div class="form-group">
                    <label asp-for="BankName"></label>
                    <input asp-for="BankName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="BankAccountNumber"></label>
                    <input asp-for="BankAccountNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="BankRoutingNumber"></label>
                    <input asp-for="BankRoutingNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="SwiftCode"></label>
                    <input asp-for="SwiftCode" class="form-control" />
                </div>
                <div class="form-group form-check">
                    <input asp-for="HasAcceptedTerms" class="form-check-input" />
                    <label asp-for="HasAcceptedTerms" class="form-check-label">I accept the terms and conditions</label>
                </div>
            </div>
        </div>

        <!-- Submit button outside cards -->
        <button type="submit" class="btn-submit">Create Store</button>
    </form>

</div>

