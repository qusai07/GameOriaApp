@model GameOria.Shared.ViewModels.BecomeOrganizerViewModel


<style>
    body {
        background: url('../assets/images/welcome-hero/banner.jpg') no-repeat;
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-size: cover;
        padding: 0;
        
    }

    .verify-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .verify-card {
        background-color: #181818;
        border-radius: 25px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
        padding: 4rem 3rem;
        max-width: 500px;
        width: 100%;
        text-align: start;
        animation: fadeIn 0.6s ease-in-out;
    }

    .verify-card h3 {
        color: #ff3b3b;
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 0.75rem;
    }

    .verify-card p {
        color: #bbb;
        margin-bottom: 2.5rem;
        font-size: 1.1rem;
    }

    .form-control {
        background: #222;
        color: #fff;
        border: 2px solid #333;
        border-radius: 12px;
        padding: 1rem;
        font-size: 1.1rem;
        transition: 0.3s;
    }

    .form-control:focus {
        border-color: #ff3b3b;
        background: #2b2b2b;
        outline: none;
    }

    .btn-submit {
        background-color: #ff3b3b;
        color: white;
        font-weight: 700;
        border: none;
        padding: 1rem;
        width: 100%;
        border-radius: 50px;
        font-size: 1.25rem;
        margin-top: 1.5rem;
        transition: background 0.3s, transform 0.2s;
    }

    .btn-submit:hover {
        background-color: #ff5555;
        transform: scale(1.05);
    }

    keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="verify-container">
    <div class="verify-card">
        <h3>Become a Partner Organizer</h3>
        <p>Please enter all your data to submit your request</p>

        <form asp-action="BecomeOrganizer" method="post">
            <div class="mb-4">
                <label asp-for="BusinessEmail" class="form-label">Business Email</label>
                <input asp-for="BusinessEmail" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="BusinessEmail" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="StoreName" class="form-label">Store Name</label>
                <input asp-for="StoreName" class="form-control" placeholder="Enter your store name" />
                <span asp-validation-for="StoreName" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="IdentityNumber" class="form-label">Identity Number</label>
                <input asp-for="IdentityNumber" class="form-control" placeholder="Enter your identity number" />
                <span asp-validation-for="IdentityNumber" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="PhoneNumber" class="form-label">Business Phone Number </label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <p>(Optional) meaning we should to make a old email and mobile number</p>
            <button type="submit" class="btn-submit">Submit Request</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
