<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameOria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/userlayout.css" />
</head>
<body>
    <div class="user-dashboard d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column bg-dark text-white">
            <div class="sidebar-header p-3 text-center">
                <h4>GameOria</h4>
            </div>
           
            <ul class="nav flex-column mt-3">
                @{
                    var role = Context.Session.GetString("UserRole")?.ToLower() ?? "user";
                }

                @if (role == "organizer")
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Organizer" asp-action="MyReviews">
                            <i class="fas fa-cog me-2"></i>My Reviews
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Organizer" asp-action="MyStore">
                            <i class="fas fa-cog me-2"></i>My Store
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Organizer" asp-action="MySettings">
                            <i class="fas fa-cog me-2"></i>My Settings
                        </a>
                    </li>
                }

                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="User" asp-action="Settings">
                            <i class="fas fa-cog me-2"></i>My Cart
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="User" asp-action="Settings">
                            <i class="fas fa-cog me-2"></i>My Favorite
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="User" asp-action="Settings">
                            <i class="fas fa-cog me-2"></i>My Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Organizer" asp-action="BecomeOrganizer">
                            <i class="fas fa-cog me-2"></i>Become A Partner
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Authentication" asp-action="Profile">
                        <i class="fas fa-user me-2"></i>Profile
                    </a>
                </li>
            </ul>
            <ul class="nav flex-column mb-3">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Authentication" asp-action="Logout" method="post">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="main-content bg-light">
            <div class="container-fluid p-5">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
