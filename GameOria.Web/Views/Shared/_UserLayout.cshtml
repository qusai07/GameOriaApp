<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameOria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/user-layout.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <div class="user-dashboard d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column bg-dark text-white">
            <div class="sidebar-header p-3 text-center">
                <h4>GameOria</h4>
            </div>
            <ul class="nav flex-column mt-3">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="User" asp-action="Dashboard">
                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Authentication" asp-action="Profile">
                        <i class="fas fa-user me-2"></i>Profile
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="User" asp-action="Settings">
                        <i class="fas fa-cog me-2"></i>My Cart
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="User" asp-action="Settings">
                        <i class="fas fa-cog me-2"></i>My Favorite
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="User" asp-action="Settings">
                        <i class="fas fa-cog me-2"></i>My Orders
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="User" asp-action="Settings">
                        <i class="fas fa-cog me-2"></i>Settings
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Organizer" asp-action="BecomeOrganizer">
                        <i class="fas fa-cog me-2"></i>Become A Partner
                    </a>
                </li>
            </ul>
            <ul class="nav flex-column mb-3">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Authentication" asp-action="Logout" method="post" >
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="main-content flex-grow-1 bg-light">
            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
